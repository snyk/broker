{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2022"],
    "module": "NodeNext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  },
  "include": ["./lib/**/*", "./cli/**/*", "./types/**/*"]
}
